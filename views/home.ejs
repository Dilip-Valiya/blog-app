<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Home</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Blog Posts</h1>
    <a href="/compose">Create New Post</a>

    <% posts.forEach(post => { %>
    <div class="post">
      <h2><a href="/posts/<%= post.title %>"><%= post.title %></a></h2>
      <p><%= post.content %></p>
    </div>
    <% }); %>
  </body>
</html>
